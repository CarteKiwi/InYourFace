<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="InYourFace.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:InYourFace"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    mc:Ignorable="d"
    Title="Guillaume DEMICHELI">

    <Grid VerticalAlignment="Stretch">

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Frame Background="CornflowerBlue" Width="4px" VerticalAlignment="Stretch" Margin="10,15,10,5"/>
                <TextBlock HorizontalAlignment="Center" Text="Board Meeting" FontSize="40" Margin="0,0" FontFamily="Segoe UI" FontWeight="SemiBold"/>
            </StackPanel>

            <TextBlock HorizontalAlignment="Center" Text="3:00 PM - 4:00 PM" FontSize="25" Margin="0,0" FontFamily="Segoe UI" FontWeight="SemiLight"/>

            <TextBlock HorizontalAlignment="Center" Text="The event will start in 51 seconds" FontSize="14" Margin="0,14" FontFamily="Segoe UI"/>

            <TextBlock HorizontalAlignment="Center" Text="Conference Room" FontSize="30" Margin="0,0" FontFamily="Segoe UI"/>

            <Button x:Name="myButton" HorizontalAlignment="Center"
                    Margin="0,40"
                    MinWidth="200"
                    Click="myButton_Click" Background="DarkOrange" Foreground="Black">Ok</Button>
        </StackPanel>

        <StackPanel VerticalAlignment="Bottom" Margin="0,0,0,50" Visibility="Collapsed">
            <TextBlock HorizontalAlignment="Center" Text="To be continued" TextDecorations="Underline" Typography.Capitals="SmallCaps" FontSize="30" Margin="0,0" FontFamily="Segoe UI"/>
            <TextBlock HorizontalAlignment="Center" Text="by" FontSize="15" Margin="0,0" FontFamily="Segoe UI"/>
            <TextBlock HorizontalAlignment="Center" Text="Guillaume DEMICHELI" FontSize="20" Margin="0,0" FontFamily="Segoe UI"/>
            <TextBlock HorizontalAlignment="Center" Text="with " FontSize="12" Margin="0,0,0,5" FontFamily="Segoe UI"/>
            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEB52;" Foreground="#C72335" />

        </StackPanel>
    </Grid>
</Window>
